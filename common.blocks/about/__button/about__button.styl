.about__button
    display: inline-block;
    box-sizing: border-box;
    width: 194px;
    height: 47px;
    background-color: white;
    border: 1px solid rgba(0, 0, 0, 0.5);
    border-radius: 2px;
    background: url(about__button.svg) no-repeat 22px 50%;

    color: #616161;
    font-family: 'Open Sans', sans-serif;
    font-size: 12px;
    font-weight: 600;
    line-height: 46px;
    text-transform: uppercase;
    text-decoration: none;
    padding: 0 0 0 47px;
